<%= @deck.name %>
<br>
<%= @deck.description %>

<ul>
  <% @cards.each do |card| %>
    <li>
      <%= card.name %>
      <br>
      <%= card.description %>
    </li>
  <% end %>
</ul>

<%= link_to 'Destroy', deck_path(@deck), method:
      :delete,
      data: { confirm: 'Are you sure?' } %>


<%= form_for([@deck, @card]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', decks_path %>
