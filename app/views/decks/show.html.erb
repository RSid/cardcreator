<head>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
</head>

<body class="content">
  <div class="center">
    <h2><%= @deck.name %></h2>
    <div class="delete">
      <%= link_to 'Destroy deck', deck_path(@deck), method:
            :delete,
            data: { confirm: 'Are you sure?' } %>
    </div>
    <p><%= @deck.description %></p>



  <br><br>

  <ul class = "card-list">
    <% @cards.each do |card| %>

        <li class ="card">

          <strong><%= card.name %></strong>
          <%= link_to 'delete', [card.deck, card], method:
                :delete,
                data: { confirm: 'Are you sure?' } %>

          <br><br>
          <div id="left-justify">
            <%= card.description %>
          </div>
        </li>

    <% end %>
  </ul>



  <h4>Add a card to the deck</h4>
  <%= form_for([@deck, @card]) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description, :cols => "80", :rows => "11" %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

  <%= link_to 'Back', decks_path %>
  </div>
</body>
